<% 
   const {
        items:artistsItems
   } = locals.artists
 %> 

<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('../layouts/head',{title:`${locals.title} | Musify`}) %> 
   
</head>
<body>
    <%- include('../layouts/recent_played',{recentlyPlayed:locals.recentlyPlayedTracks}) %> 
    <article class="page custom-scrollbar" data-page>
       
        <%- include('../partials/top_bar.ejs',locals.currentProfile) %>
        <%- include('../partials/bottom_nav') %>

        <div class="main" data-main>
            <section class="section">
                <div class="title-wrapper">
                    <h2 class="title-large section-title"><%=locals.title%></h2>
                </div>
                <div class="grid-list">
                    <% artistsItems.forEach(({name,type,images,id,uri}) => { %>
                    
                            <% 
                                    const [image] = images || []
                            %>
                            <%- include('../partials/card',{
                                variant:'artist-card',
                                title:name,
                                image,
                                type:'artist',
                                text:type,
                                link:`/artist/${id}`,
                                uri
                            }) %> 
                                   
                       
                    <% }) %>
                    
                </div>

                <%- include('../partials/pagination',
                  locals.artists
                ) %> 
            </section>
        </div>
      


        <%- include('../layouts/footer')  %> 
        <%- include('../partials/player_sm') %> 
        <%- include('../partials/player_lg') %> 

    </article>
   
    
</body>
</html>